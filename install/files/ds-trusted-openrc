#!/sbin/openrc-run

# http://big-elephants.com/2013-01/writing-your-own-init-scripts/

name="ds-trusted"

depend() {
        need networking
}
start() {
        ebegin "Starting ds-trusted"
        start-stop-daemon --background --start --exec /bin/ds-trusted \
        --make-pidfile --pidfile /root/ds-trusted-pid
        eend $?
}
stop() {
        ebegin "Stopping ds-trusted"
        start-stop-daemon --stop --exec /bin/ds-trusted \
        --pidfile /root/ds-trusted-pid
        eend $?
}
